<p id="notice"><%= notice %></p>

<h1>Switches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Local ip</th>
      <th>User</th>
      <th>Pass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @switches.each do |switch| %>
      <tr>
        <td><%= switch.name %></td>
        <td><%= switch.local_ip %></td>
        <td><%= switch.user %></td>
        <td><%= switch.pass %></td>
        <td><%= link_to 'Show', switch %></td>
        <td><%= link_to 'Edit', edit_switch_path(switch) %></td>
        <td><%= link_to 'Destroy', switch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Switch', new_switch_path %>
